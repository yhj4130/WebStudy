<script type="text/javascript">

	function actionPerformed()
	{
		//alert("test");	// 경고창 
		
		var vName = document.getElementById("id").value;
		var vKor = document.getElemetByID("kor").value;
		var vEng = document.getElemetByID("eng").value;
		var vMat = document.getElemetByID("mat").value;
		var vTot = 0;
		var vAvg = 0;
		
		vTot = parseInt(vKor) + parseInt(vEng) + parseInt(vMat);
		vAvg = Math.round(vTot/3);
		
		document.getElementById("tot").value = vTot;
		document.getElementById("avg").value = vAvg;
	}

</script>

